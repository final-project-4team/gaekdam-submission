<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gaekdam.gaekdambe.communication_service.incident.query.mapper.IncidentActionMapper">

    <!-- loginId + hotelGroupCode 로 employeeCode 조회 -->
    <select id="findEmployeeCodeByLoginId" resultType="long">
        SELECT e.employee_code
        FROM employee e
        WHERE e.hotel_group_code = #{hotelGroupCode}
        AND e.login_id = #{loginId}
        LIMIT 1
    </select>

</mapper>
