{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SqsConsumeIndexingQueue",
      "Effect": "Allow",
      "Action": [
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:ChangeMessageVisibility",
        "sqs:GetQueueAttributes",
        "sqs:GetQueueUrl"
      ],
      "Resource": [
        "arn:aws:sqs:ap-northeast-2:248189914600:rag-indexing-queue",
        "arn:aws:sqs:ap-northeast-2:248189914600:rag-indexing-dlq"
      ]
    },
    {
      "Sid": "S3ReadObjectsOnly",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::gaekdam-ai-bot-bucket",
        "arn:aws:s3:::gaekdam-ai-bot-bucket/*"
      ]
    },
    {
      "Sid": "CloudWatchLogsWriteForEcs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogStreams"
      ],
      "Resource": [
        "arn:aws:logs:ap-northeast-2:248189914600:log-group:/aws/ecs/*",
        "arn:aws:logs:ap-northeast-2:248189914600:log-group:/aws/ecs/*:log-stream:*"
      ]
    }
  ]
}
